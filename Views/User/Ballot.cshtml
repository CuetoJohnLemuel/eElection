            </nav>


        </div>
    </header>
    <main class="main container py-4">
        <div class="row">
            <!-- Ballot Forms -->
            <div class="col-md-8">
                <!-- National Positions -->
                <div class="card mb-3">
                    <div class="card-header bg-primary text-white">National Positions</div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <tr>
                                <td>President</td>
                                <td>
                                    <select class="form-select" id="president" onchange="updateSelection('President', this.value)">
                                        <option value="">Select Candidate</option>
                                        <option value="Candidate A">Candidate A</option>
                                        <option value="Candidate B">Candidate B</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td>Vice President</td>
                                <td>
                                    <select class="form-select" id="vp" onchange="updateSelection('Vice President', this.value)">
                                        <option value="">Select Candidate</option>
                                        <option value="Candidate X">Candidate X</option>
                                        <option value="Candidate Y">Candidate Y</option>
                                    </select>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>

                <!-- Regional Positions -->
                <div class="card">
                    <div class="card-header bg-success text-white">Regional Positions</div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <tr>
                                <td>Governor</td>
                                <td>
                                    <select class="form-select" id="governor" onchange="updateSelection('Governor', this.value)">
                                        <option value="">Select Candidate</option>
                                        <option value="Candidate M">Candidate M</option>
                                        <option value="Candidate N">Candidate N</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td>Vice Governor</td>
                                <td>
                                    <select class="form-select" id="vicegovernor" onchange="updateSelection('Vice Governor', this.value)">
                                        <option value="">Select Candidate</option>
                                        <option value="Candidate P">Candidate P</option>
                                        <option value="Candidate Q">Candidate Q</option>
                                    </select>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Selected Candidates Panel -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-dark text-white">Your Selection</div>
                    <div class="card-body">
                        <ul id="selectedCandidates" class="list-group"></ul>
                    </div>
                </div>
            </div>
        </div>
    </main>




    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Preloader -->
    <div id="preloader"></div>


    <script>
        function updateSelection(position, candidate) {
            let selectionList = document.getElementById("selectedCandidates");
            let existingItem = document.getElementById("selection-" + position);

            if (existingItem) {
                existingItem.innerHTML = `<strong>${position}:</strong> ${candidate}`;
            } else {
                let li = document.createElement("li");
                li.id = "selection-" + position;
                li.classList.add("list-group-item");
                li.innerHTML = `<strong>${position}:</strong> ${candidate}`;
                selectionList.appendChild(li);
            }
        }
    </script>

