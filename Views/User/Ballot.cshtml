                    <li><a asp-controller="User" asp-action="Candidate">Candidate</a></li>
                    <li><a asp-controller="User" asp-action="Profile">Profile</a></li>
                    @* <li><a asp-controller="User" asp-action="Logout">Logout</a></li> *@
