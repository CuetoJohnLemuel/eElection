@model Election
@{
    ViewData["Title"] = "Election Management";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Election</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            background-color: #f8f9fa;
        }

        .form-container {
            max-width: 700px; /* Increased width */
            background: #fff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .form-control, .form-select {
            height: 45px;
        }
    </style>
</head>
<body>

    <div class="container vh-100 d-flex justify-content-center align-items-center">
        <div class="form-container">
            <h2 class="mb-4 text-center">Add Election</h2>

            @if (ViewBag.Errors != null)
            {
                <div class="alert alert-danger">
                    <ul>
                        @foreach (var error in ViewBag.Errors)
                        {
                            <li>@error</li>
                        }
                    </ul>
                </div>
            }

            <form method="post" asp-controller="Admin" asp-action="AddElection">
                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label class="form-label">Election Name</label>
                        <input type="text" asp-for="ElectionName" class="form-control" required>
                        <span class="text-danger" asp-validation-for="ElectionName"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Start Date</label>
                        <input type="date" asp-for="StartDate" class="form-control" required>
                        <span class="text-danger" asp-validation-for="StartDate"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">End Date</label>
                        <input type="date" asp-for="EndDate" class="form-control" required>
                        <span class="text-danger" asp-validation-for="EndDate"></span>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label class="form-label">Status</label>
                        <select asp-for="Status" class="form-select" required>
                            <option value="">Select Status</option>
                            <option value="Active">Active</option>
                            <option value="Inactive">Inactive</option>
                        </select>
                        <span class="text-danger" asp-validation-for="Status"></span>
                    </div>

                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary w-100">Add Election</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</body>
</html>
