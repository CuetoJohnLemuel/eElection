@model Voter

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Election</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Add Election</h2>

        @if (ViewBag.Errors != null)
        {
            <div class="alert alert-danger">
                <ul>
                    @foreach (var error in ViewBag.Errors)
                    {
                        <li>@error</li>
                    }
                </ul>
            </div>
        }

        <form method="post" asp-controller="Admin" asp-action="AddVoter">
            <div class="row">
                <div class="col-md-12 mb-3">
                    <label class="form-label">First Name</label>
                    <input type="text" asp-for="FirstName" class="form-control" required>
                    <span class="text-danger" asp-validation-for="FirstName"></span>
                </div>
                <div class="col-md-12 mb-3">
                    <label class="form-label">Last Name</label>
                    <input type="text" asp-for="LastName" class="form-control" required>
                    <span class="text-danger" asp-validation-for="LastName"></span>
                </div>
                <div class="col-md-12 mb-3">
                    <label class="form-label">Email</label>
                    <input type="text" asp-for="Email" class="form-control" required>
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="col-md-12 mb-3">
                    <label class="form-label">Phone</label>
                    <input type="text" asp-for="Phone" class="form-control" required>
                    <span class="text-danger" asp-validation-for="Phone"></span>
                </div>
                <div class="col-md-12 mb-3">
                    <label class="form-label">Address</label>
                    <input type="text" asp-for="Address" class="form-control" required>
                    <span class="text-danger" asp-validation-for="Address"></span>
                </div>
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary w-100">Add Voter</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
