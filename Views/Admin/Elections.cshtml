            </nav>
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row">
                        <div class="col-12 grid-margin">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">
                                        Elections
                                        @* <button class="btn btn-primary btn-sm float-right" data-toggle="modal" data-target="#addElectionModal">+ Add Election</button> *@
                                    </h4>
                                    <div class="d-flex justify-content-end mb-3">
                                        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addElectionModal">
                                           Add Election
                                        </button>
                                    </div>
                                    <div class="table-responsive">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th> Election Name </th>
                                                    <th> Election Type </th>
                                                    <th> Start Date </th>
                                                    <th> End Date </th>
                                                    <th> Status </th>
                                                    <th> Action </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var election in Model)
                                                {
                                                    <tr>
                                                        <td>@election.ElectionName</td>
                                                        <td>@election.ElectionTypes</td>
                                                        <td>@election.StartDate.ToShortDateString()</td>
                                                        <td>@election.EndDate.ToShortDateString()</td>
                                                        <td>@(election.Status)</td>
                                                        <td>
                                                            <button class="btn btn-info btn-sm edit-btn" data-id="@election.ElectionId">Edit</button>
                                                            <button class="btn btn-danger btn-sm delete-btn" data-id="@election.ElectionId">Delete</button>
                                                        </td>

                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>


                <!-- Modal for Adding Election -->
                <div class="modal fade" id="addElectionModal" tabindex="-1" aria-labelledby="addElectionModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="addElectionModalLabel">Add New Election</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form id="addElectionForm">
                                    <div class="mb-3">
                                        <label for="electionName" class="form-label">Election Name</label>
                                        <input type="text" class="form-control" id="electionName" name="ElectionName" required>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Election Type</label>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="presidential" name="ElectionType" value="Presidential Elections">
                                            <label class="form-check-label" for="presidential">Presidential Elections</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="midterm" name="ElectionType" value="Midterm Elections">
                                            <label class="form-check-label" for="midterm">Midterm Elections</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="senatorial" name="ElectionType" value="Senatorial Elections">
                                            <label class="form-check-label" for="senatorial">Senatorial Elections</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="house" name="ElectionType" value="House of Representatives Elections">
                                            <label class="form-check-label" for="house">House of Representatives Elections</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="local" name="ElectionType" value="Local Elections">
                                            <label class="form-check-label" for="local">Local Elections</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="barangay" name="ElectionType" value="Barangay and SK Elections">
                                            <label class="form-check-label" for="barangay">Barangay and Sangguniang Kabataan (SK) Elections</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="plebiscite" name="ElectionType" value="Plebiscites and Referendums">
                                            <label class="form-check-label" for="plebiscite">Plebiscites and Referendums</label>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label for="startDate" class="form-label">Start Date</label>
                                        <input type="date" class="form-control" id="startDate" name="StartDate" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="endDate" class="form-label">End Date</label>
                                        <input type="date" class="form-control" id="endDate" name="EndDate" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="status" class="form-label">Status</label>
                                        <select class="form-control" id="status" name="Status">
                                            <option value="Active">Active</option>
                                            <option value="Inactive">Inactive</option>
                                        </select>
                                    </div>
                                    <button type="submit" class="btn btn-success">Save Election</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Edit Election Modal -->
                <div class="modal fade" id="editElectionModal" tabindex="-1" aria-labelledby="editElectionModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="editElectionModalLabel">Edit Election</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form id="editElectionForm">
                                    <input type="hidden" id="editElectionId">
                                    <div class="mb-3">
                                        <label for="editElectionName" class="form-label">Election Name</label>
                                        <input type="text" class="form-control" id="editElectionName" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="editStartDate" class="form-label">Start Date</label>
                                        <input type="date" class="form-control" id="editStartDate" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="editEndDate" class="form-label">End Date</label>
                                        <input type="date" class="form-control" id="editEndDate" required>
                                    </div>
                                    

                                    <div class="mb-3">
                                        <label for="editStatus" class="form-label">Status</label>
                                        <select class="form-control" id="editStatus">
                                            <option value="Active">Active</option>
                                            <option value="Inactive">Inactive</option>
                                        </select>
                                    </div>
                                    <button type="submit" class="btn btn-success">Update Election</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- content-wrapper ends -->
                <!-- partial:partials/_footer.html -->
