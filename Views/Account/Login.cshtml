@{
    ViewData["Title"] = "Login";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-header bg-light text-center py-4">
                    <h2 class="mb-0" style="color: #333;">Logins</h2>
                </div>
                <div class="card-body p-4">
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger text-center small">
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    <form asp-controller="Account" asp-action="Login" method="post">
                        <!-- Email Field -->
                        <div class="mb-3">
                            <label class="form-label" style="color: #555;">Email</label>
                            <input type="email" name="email" class="form-control" required />
                        </div>

                        <!-- Password Field -->
                        <div class="mb-3">
                            <label class="form-label" style="color: #555;">Password</label>
                            <div class="input-group">
                                <input id="password" type="password" name="password" class="form-control" required />
                                <button class="btn btn-light" type="button" onclick="togglePassword()">
                                    <i class="bi bi-eye-slash"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary" style="background-color: #4a90e2; border: none;">Login</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3 bg-light">
                    <p class="mb-0" style="color: #555;">
                        Don't have an account?
                        <a asp-controller="Account" asp-action="Register" style="color: #4a90e2; text-decoration: none;">Sign up here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons (for eye icon) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

<!-- Password Toggle Script -->
<script>
    function togglePassword() {
        var passwordInput = document.getElementById("password");
        var eyeIcon = document.querySelector(".btn-light i");

        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            eyeIcon.classList.remove("bi-eye-slash");
            eyeIcon.classList.add("bi-eye");
        } else {
            passwordInput.type = "password";
            eyeIcon.classList.remove("bi-eye");
            eyeIcon.classList.add("bi-eye-slash");
        }
    }
</script>

<!-- Custom Styling -->
<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #e9ecef;
    }

    .form-control {
        border-radius: 5px;
        padding: 10px;
        border: 1px solid #e9ecef;
    }

    .btn-primary {
        background-color: #4a90e2;
        border: none;
        padding: 10px;
        font-size: 1.1rem;
    }

        .btn-primary:hover {
            background-color: #357abd;
        }

    .text-danger {
        font-size: 0.9rem;
        color: #dc3545;
    }

    .card-footer {
        background-color: #f8f9fa;
        border-top: 1px solid #e9ecef;
    }
</style>
